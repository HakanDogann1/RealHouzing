@model List<AboutListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Pozisyon</th>
        <th>İçerik</th>
        <th>Resim</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AboutID</th>
            <td>@item.NameSurname</td>
            <td>@item.Position</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }

</table>
<br />

