@model List<HeaderListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık1</th>
        <th>Başlık2</th>
        <th>Resim</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.HeaderID</th>
            <td>@item.HeaderTitle1</td>
            <td>@item.HeaderTitle2</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Header/UpdateHeader/@item.HeaderID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>

