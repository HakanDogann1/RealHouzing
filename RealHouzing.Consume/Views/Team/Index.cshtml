@model List<TeamListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Pozisyon</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TeamID</th>
            <td>@item.NameSurname</td>
            <td>@item.Position</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Team/UpdateTeam/@item.TeamID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Team/AddTeam/" class="btn btn-outline-success">Ekle</a>


