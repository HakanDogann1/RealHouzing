@model List<Property3ListViewModel>
<section class="w3l-grids-3 py-5" id="about">
    <div class="container py-md-5 py-3">
        <div class="row bottom-ab-grids">
            @foreach (var item in Model)
            {
              <div class="w3l-video-left col-lg-6" id="video">
                <!-- /home-page-video-popup-->
                <div class="w3l-index5">
                    <div class="position-relative mt-4">
                        <a href="#small-dialog" class="popup-with-zoom-anim play-view text-center position-absolute">
                            <span class="video-play-icon">
                                <span class="fa fa-play"></span>
                            </span>
                        </a>
                        <!-- dialog itself, mfp-hide class is required to make dialog hidden -->
                        <div id="small-dialog" class="zoom-anim-dialog mfp-hide">
                            <iframe src="@item.ImageUrl" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
                        </div>
                        <!-- dialog itself, mfp-hide class is required to make dialog hidden -->
                    </div>
                    <!-- //home-page-video-popup-->
                </div>
               
            </div>
           
            <div class="w3ab-left-top col-lg-6 mt-lg-0 mt-5 ps-lg-5">
                <h6 class="title-subw3hny mb-1">
                    Ev satın al
                </h6>
                <h3 class="title-w3l mb-2">@item.Property3Title</h3>
                <p class="my-3"> @item.Property3Description</p>
               
                <a href="about.html" class="btn btn-style btn-primary mt-4">Explore Buying <i class="fas fa-angle-double-right ms-2"></i></a>
            </div>
            }
          
        </div>
    </div>
</section>